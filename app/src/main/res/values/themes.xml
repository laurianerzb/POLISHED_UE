<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TipCalculatorUE" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
        <!-- Radio buttons -->
        <item name="radioButtonStyle">@style/Widget.TipCalculatorUE.CompoundButton.RadioButton
        </item>
        <!-- Switches -->
        <item name="switchStyle">@style/Widget.TipCalculatorUE.CompoundButton.Switch</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TipCalculatorUE" parent="Base.Theme.TipCalculatorUE" />
</resources>